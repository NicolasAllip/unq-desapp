<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="model.outings.OutingEvent">
        <id column="ID" name="id">
            <generator class="native"/>
        </id>

        <property name="name"/>
        <property name="description"/>
        <many-to-one name="address" class="model.locations.Address" unique="true" lazy="false" cascade="all"/>
        <property name="price"/>
        <property name="startDateTime" type="org.jadira.usertype.dateandtime.joda.PersistentLocalDateTime"/>
        <property name="endDateTime" type="org.jadira.usertype.dateandtime.joda.PersistentLocalDateTime"/>
        <list name="tags" lazy="false">
            <key column="id"/>
            <list-index column="type"></list-index>
            <many-to-many class="model.tags.Tag"/>
        </list>
        <list name="assistants" lazy="false">
            <key column="id"/>
            <list-index column="type"></list-index>
            <many-to-many class="model.users.User"/>
        </list>

    </class>
</hibernate-mapping>