<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="model.users.User">
        <id column="ID" name="id">
            <generator class="native"/>
        </id>

        <property name="name"/>
        <property name="surname"/>
        <one-to-one name="location" class="model.locations.Address"/>
        <!--<list name="friends" lazy="false">
            <key column="id"/>
            <list-index column="type"></list-index>
            <one-to-many class="model.users.User"/>
        </list>-->
        <one-to-one name="profile" class="model.users.Profile"/>

    </class>
</hibernate-mapping>